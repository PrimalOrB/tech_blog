<article class="post">
    <div class="post-title">
        <div class="title-div">
            <a href="/edit/{{id}}" class="edit-link">
                <svg class="edit-icon" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" aria-labelledby="title"
                    aria-describedby="desc" role="img" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <title>Pencil</title>
                    <desc>A solid styled icon from Orion Icon Library.</desc>
                    <path d="M10.239 42.86L45.812 7.328l10.848 10.86L21.086 53.72z" fill="#375c7b" data-name="layer1">
                    </path>
                    <path fill="#375c7b" d="M59.492 15.358l2.259-2.258A7.674 7.674 0 1 0 50.9 2.248L48.639 4.5z"
                        data-name="layer2"></path>
                    <path d="M7.851 46.135L-.073 64.024 17.816 56.1l-9.965-9.965z" fill="#375c7b" data-name="layer1">
                    </path>
                </svg>
            </a>
            <a href="/post/{{ id }}">{{ title }}</a>
            {{#if_equals num_comments  0 operator=">"}}
            <span class="comment-count">( {{num_comments}} {{format_plural 'Comment' num_comments}} )</span>
            {{/if_equals}}
        </div>
        {{#if_equals created_at updated_at operator=">=" }}
        <div class="meta">Posted by {{ user.username }} on {{
            format_date created_at }}
        </div>
        {{else}}
        <div class="meta">Updated by {{ user.username }} on {{ format_date updated_at }}</div>
        {{/if_equals}}
    </div>

    <div class="post-content">
        {{ content }}
        {{#if edit}}
        <p>edit</p>
        {{/if}}
    </div>

</article>

<section id="create-post">
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div id="post-div">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div id="post-div">
            <label for="post-content">Post Text</label>
            <textarea id="post-content" name="post-content" rows="5" /></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section id="post-list-item">
    <h2 class="divide-header">Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/js/add-post.js"></script>

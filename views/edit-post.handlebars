<section id="edit-post">
    <h2>Edit Post</h2>

    <form class="edit-post-form" autocomplete="off">
        <div id="post-div">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" value="{{post.title}}" />
        </div>
        <div id="post-div">
            <label for="post-content">Post Text</label>
            <textarea id="post-content" name="post-content" rows="5" />{{post.content}}</textarea>
        </div>
        <div class="button-foot">
            <button type="submit" class="btn">Save</button>
            <button type="submit" class="delete-btn">Delete Post</button>
        </div>
    </form>
</section>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>

{{> post-info post}}
{{#if_equals post.comments.length  0 operator=">"}}
{{> comments post.comments}}
{{/if_equals}}

{{#if loggedIn}}
<form class="comment-form">
    <h2 class="divide-header">Add Comment</h2>
    <div id="comment-div">
        <textarea name="comment-body" id="comment-body" rows="5"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
    </div>
</form>
<script src="/js/comment.js"></script>
{{/if}}



